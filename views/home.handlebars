{{#unless articles}}
	<div class="panel panel-default">
		<div class="panel-body">
			<p class="noArticles text-center">No Articles Available.</p>
		</div>
	</div>
{{/unless}}

{{#if articles}}
	<div class="row">
		<div class="col-md-12">
			{{#each articles}}
				<div class="panel panel-default">
					<div class="panel-heading">
						<div class="row">
							<div class="col-md-10">
								<h3><a href="{{this.link}}" class="title">{{this.title}}</a></h3>
							</div>
							<div class="col-md-2">
								<button class="btn btn-danger save-button" data-id="{{this._id}}">Save Article</button>
							</div>
						</div>
					</div>
					<div class="panel-body">
						{{#if this.summary}}
							<p>{{this.summary}}</p>
						{{/if}}
						{{#unless this.summary}}
							<p>No Summary Available</p>
						{{/unless}}
					</div>
				</div>
			{{/each}}
		</div>
	</div>
{{/if}}